@model List<CategoriesModel>
@{
    ViewData["Title"] = "Categories";
}

<h2>All categories</h2>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach(var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td><a asp-controller="Goods" asp-action="Index" asp-route-id="@category.Id">View</a></td>
       </tr>
    }
</table>