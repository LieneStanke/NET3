@model List<GoodsModel>
@{
    ViewData["Title"] = "Goods";
}

<h2>All goods</h2>

<a asp-controller="Categories" asp-action="Index" asp-route-id="">Back</a>
<br />

@if (Model.Count > 0)
{
<table class="table table-striped">
    <tr>
        <th>Price</th>
        <th>Name</th>
        <th>Description</th>
        <th></th>
    </tr>
    @foreach (var goods in Model)
    {
        <tr>
            <td>@goods.Price</td>
            <td>@goods.GoodsName</td>
            <td>@goods.Description</td>
            <td><a asp-controller="Goods" asp-action="ViewGoods" asp-route-id="@goods.Id">View</a></td>
        </tr>
    }
</table>
}
else
{
    <div>Nav preču!</div>
}