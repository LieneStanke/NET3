@model List<ItemModel>
@{
    ViewData["Title"] = "List";
}

<h2>List</h2>

<a asp-controller="Item" asp-action="Create">Create a new one</a>
<br/>
<br/>

@if (Model.Count == 0)
{
    <h3>No items!</h3>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Item name</th>
            <th>Category ID</th>
            <th>Price</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.CategoryId</td>
                <td>@item.Price</td>
                <td><a asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }
    </table>
}